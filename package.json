{
	"name": "pockly",
	"private": true,
	"scripts": {
		"dev": "concurrently -c 'blue,yellow,green' 'yarn:dev:docker' 'yarn:dev:next' 'yarn:dev:compile'",
		"dev:next": "next dev",
		"dev:compile": "yarn generate:graphql --watch",
		"dev:docker": "docker-compose up",
		"build": "next build",
		"vercel-build": "yarn generate && next build && prisma db push --accept-data-loss",
		"start": "prisma db push && next start",
		"generate": "yarn generate:prisma && yarn generate:graphql",
		"generate:prisma": "prisma generate",
		"generate:graphql": "yarn graphql-codegen",
		"generate:theme-typings": "chakra-cli tokens src/theme.ts",
		"lint": "next lint",
		"tsc": "tsc --noEmit",
		"format": "prettier './**/*.{js,jsx,ts,tsx,css,json,md,yml}' --write",
		"format:check": "prettier --check './**/*.{js,jsx,ts,tsx,css,json,md,yml}'",
		"prepare": "is-ci || husky install"
	},
	"prisma": {
		"seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yml,css}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@apollo/client": "^3.6.0",
		"@chakra-ui/react": "^1.8.7",
		"@emotion/react": "^11",
		"@emotion/styled": "^11",
		"@headlessui/react": "^1.6.0",
		"@heroicons/react": "^1.0.5",
		"@hookform/resolvers": "^2.8.8",
		"@next-auth/prisma-adapter": "^1.0.1",
		"@pothos/core": "^3.8.0",
		"@pothos/plugin-prisma": "^3.5.0",
		"@pothos/plugin-scope-auth": "^3.7.0",
		"@pothos/plugin-validation": "^3.3.0",
		"@prisma/client": "^3.13.0",
		"apollo-server-core": "^3.5.0",
		"apollo-server-micro": "^3.5.0",
		"axios": "^0.27.2",
		"chakra-react-select": "^3.3.1",
		"framer-motion": "^6.3.3",
		"graphql": "^16.4.0",
		"graphql-tag": "^2.12.6",
		"is-ci": "^3.0.1",
		"metascraper": "^5.29.3",
		"metascraper-image": "^5.29.3",
		"metascraper-title": "^5.29.3",
		"micro": "^9.3.4",
		"next": "^12.1.5",
		"next-auth": "^4.3.4",
		"nprogress": "^0.2.0",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"react-hook-form": "^7.30.0",
		"react-remove-scroll": "^2.5.1"
	},
	"devDependencies": {
		"@boost/module": "^3.1.0",
		"@chakra-ui/cli": "^1.7.0",
		"@faker-js/faker": "^6.2.0",
		"@graphql-codegen/cli": "^2.3.0",
		"@graphql-codegen/named-operations-object": "^2.2.1",
		"@graphql-codegen/schema-ast": "^2.4.0",
		"@graphql-codegen/typescript": "^2.4.1",
		"@graphql-codegen/typescript-operations": "^2.2.1",
		"@graphql-codegen/typescript-react-apollo": "^3.2.2",
		"@next/bundle-analyzer": "^12.1.5",
		"@types/is-ci": "^3.0.0",
		"@types/node": "^16.11.11",
		"@types/nprogress": "^0.2.0",
		"@types/react": "^18.0.0",
		"concurrently": "^7.1.0",
		"eslint": "^8.14.0",
		"eslint-config-next": "^12.1.5",
		"husky": "^7.0.4",
		"lint-staged": "^12.4.1",
		"prettier": "^2.5.0",
		"prisma": "^3.13.0",
		"ts-node": "^10.7.0",
		"tsconfig-paths": "^3.12.0",
		"typescript": "^4.5.2",
		"zod": "^3.14.4"
	}
}
