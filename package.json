{
	"private": true,
	"workspaces": {
		"packages": [
			"packages/*"
		],
		"nohoist": [
			"**/@pothos/*"
		]
	},
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"generate": "turbo run generate",
		"lint": "turbo run lint",
		"typecheck": "turbo run typecheck",
		"clean": "turbo run clean && rimraf node_modules",
		"prepare": "is-ci || husky install"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,md,yml,css}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"husky": "^8.0.1",
		"is-ci": "^3.0.1",
		"lint-staged": "^13.0.0",
		"prettier": "^2.5.0",
		"rimraf": "^3.0.2",
		"turbo": "^1.2.16"
	}
}
