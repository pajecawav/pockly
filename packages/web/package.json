		"metascraper-image": "^5.29.7",
		"metascraper-title": "^5.29.7",
		"micro": "^9.3.4",
		"next": "^12.1.6",
		"next-auth": "^4.5.0",
		"next-pwa": "^5.5.4",
		"nprogress": "^0.2.0",
