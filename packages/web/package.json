{
	"name": "@pockly/web",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev": "cross-env FORCE_COLOR=1 concurrently -c 'blue,yellow,green' 'yarn:dev:docker' 'yarn:dev:next' 'yarn:dev:compile'",
		"dev:next": "next dev",
		"dev:compile": "yarn generate:graphql --watch",
		"dev:docker": "docker-compose up",
		"build": "next build",
		"vercel-build": "yarn generate && next build && prisma db push --accept-data-loss",
		"start": "prisma db push && next start",
		"generate": "yarn generate:prisma && yarn generate:graphql",
		"generate:prisma": "prisma generate",
		"generate:graphql": "cross-env DATABASE_URL='postgres://postgres@postgres:5432/postgres' graphql-codegen",
		"generate:theme-typings": "chakra-cli tokens src/theme.ts",
		"lint": "next lint",
		"typecheck": "tsc --noEmit",
		"format": "prettier './**/*.{js,jsx,ts,tsx,css,json,md,yml}' --write",
		"format:check": "prettier --check './**/*.{js,jsx,ts,tsx,css,json,md,yml}'",
		"clean": "rimraf .next node_modules src/__generated__"
	},
	"prisma": {
		"seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"dependencies": {
		"@apollo/client": "^3.6.6",
		"@chakra-ui/react": "^2.1.2",
		"@emotion/react": "^11",
		"@emotion/styled": "^11",
		"@hookform/resolvers": "^2.8.10",
		"@next-auth/prisma-adapter": "^1.0.1",
		"@pothos/core": "^3.11.0",
		"@pothos/plugin-prisma": "^3.8.0",
		"@pothos/plugin-relay": "^3.12.0",
		"@pothos/plugin-scope-auth": "^3.9.0",
		"@pothos/plugin-validation": "^3.4.1",
		"@prisma/client": "^3.14.0",
		"apollo-server-core": "^3.8.1",
		"apollo-server-micro": "^3.8.1",
		"axios": "^0.27.2",
		"chakra-react-select": "^4.0.0",
		"framer-motion": "^6.3.6",
		"graphql": "^16.5.0",
		"graphql-tag": "^2.12.6",
		"metascraper": "^5.29.8",
		"metascraper-image": "^5.29.7",
		"metascraper-title": "^5.29.7",
		"micro": "^9.3.4",
		"next": "^12.1.6",
		"next-auth": "^4.3.4",
		"next-pwa": "^5.5.2",
		"nprogress": "^0.2.0",
		"react": "^18.1.0",
		"react-beautiful-dnd": "^13.1.0",
		"react-dom": "^18.1.0",
		"react-hook-form": "^7.31.3",
		"react-icons": "^4.4.0",
		"react-remove-scroll": "^2.5.3",
		"react-textarea-autosize": "^8.3.4",
		"react-waypoint": "^10.1.0",
		"zustand": "^4.0.0-rc.1"
	},
	"devDependencies": {
		"@boost/module": "^3.1.0",
		"@chakra-ui/cli": "^2.0.0",
		"@faker-js/faker": "^6.3.1",
		"@graphql-codegen/cli": "^2.3.0",
		"@graphql-codegen/named-operations-object": "^2.2.1",
		"@graphql-codegen/schema-ast": "^2.4.0",
		"@graphql-codegen/typed-document-node": "^2.2.11",
		"@graphql-codegen/typescript": "^2.4.11",
		"@graphql-codegen/typescript-apollo-client-helpers": "^2.1.18",
		"@graphql-codegen/typescript-operations": "^2.4.0",
		"@graphql-codegen/typescript-react-apollo": "^3.2.14",
		"@next/bundle-analyzer": "^12.1.6",
		"@pockly/configs": "*",
		"@types/is-ci": "^3.0.0",
		"@types/node": "^16.11.11",
		"@types/nprogress": "^0.2.0",
		"@types/react": "^18.0.10",
		"@types/react-beautiful-dnd": "^13.1.2",
		"@types/react-dom": "^18.0.5",
		"concurrently": "^7.2.1",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.1",
		"dotenv-expand": "^8.0.3",
		"eslint": "^8.16.0",
		"eslint-config-next": "^12.1.6",
		"prisma": "^3.14.0",
		"rimraf": "^3.0.2",
		"ts-node": "^10.8.0",
		"tsconfig-paths": "^4.0.0",
		"typescript": "^4.7.2",
		"zod": "^3.17.3"
	}
}
