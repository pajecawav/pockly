		"metascraper": "^5.29.14",
		"metascraper-image": "^5.29.14",
		"metascraper-title": "^5.29.14",
		"micro": "^9.3.4",
		"next": "^12.2.2",
		"next-auth": "^4.10.3",
		"next-pwa": "^5.5.4",
		"nprogress": "^0.2.0",
