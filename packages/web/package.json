{
	"name": "@pockly/web",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev": "cross-env FORCE_COLOR=1 concurrently -c 'blue,yellow' 'yarn:dev:next' 'yarn:dev:compile'",
		"dev:next": "next dev",
		"dev:compile": "yarn generate:graphql --watch",
		"build": "next build",
		"vercel-build": "cd ../.. && yarn build --filter @pockly/web",
		"start": "next start",
		"generate": "yarn generate:graphql",
		"generate:graphql": "cross-env DATABASE_URL='postgres://postgres@postgres:5432/postgres' graphql-codegen",
		"generate:theme-typings": "chakra-cli tokens src/theme.ts",
		"lint": "next lint",
		"typecheck": "tsc --noEmit --pretty",
		"clean": "rimraf .next node_modules .turbo src/__generated__"
	},
	"dependencies": {
