{
	"name": "@pockly/extension",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev": "yarn run clean && cross-env NODE_ENV=development run-p -l dev:*",
		"dev:prepare": "esno scripts/prepare.ts",
		"dev:web": "vite",
		"dev:js": "true || yarn run build:js -- --mode development",
		"build": "cross-env NODE_ENV=production run-s -l clean build:web build:prepare build:js",
		"build:prepare": "esno scripts/prepare.ts",
		"build:web": "vite build",
		"build:js": "vite build --config vite.config.content.ts",
		"package": "cross-env NODE_ENV=production run-p -l package:*",
		"package:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
		"package:crx": "crx pack extension -o ./extension.crx",
		"package:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
		"start:chromium": "web-ext run --source-dir ./extension --target=chromium",
		"start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
		"lint": "eslint '{src,scripts}/**/*.{json,js,jsx,ts,tsx}'",
		"typecheck": "tsc --noEmit",
		"format": "prettier --write './**/*.{js,jsx,ts,tsx,css,json,md,yml}'",
		"format:check": "prettier --check './**/*.{js,jsx,ts,tsx,css,json,md,yml}'",
		"clean": "rimraf extension/dist extension/manifest.json extension.*"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yml,css}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"graphql": "^16.5.0",
		"graphql-request": "^4.3.0",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"react-icons": "^4.4.0",
		"zustand": "^4.0.0-rc.1"
	},
	"devDependencies": {
		"@ffflorian/jszip-cli": "^3.1.6",
		"@pockly/configs": "*",
		"@types/fs-extra": "^9.0.13",
		"@types/node": "^17.0.25",
		"@types/react": "^18.0.9",
		"@types/react-dom": "^18.0.5",
		"@types/webextension-polyfill": "^0.8.3",
		"@typescript-eslint/eslint-plugin": "^5.20.0",
		"@typescript-eslint/parser": "^5.26.0",
		"@vitejs/plugin-react": "^1.3.2",
		"autoprefixer": "^10.4.7",
		"chokidar": "^3.5.3",
		"cross-env": "^7.0.3",
		"crx": "^5.0.1",
		"eslint": "^8.13.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-react": "^7.30.0",
		"eslint-plugin-react-hooks": "^4.5.0",
		"esno": "^0.16.3",
		"fs-extra": "^10.1.0",
		"husky": "^8.0.0",
		"is-ci": "^3.0.1",
		"kolorist": "^1.5.1",
		"lint-staged": "^12.4.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.14",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"tailwindcss": "^3.0.24",
		"typescript": "^4.6.3",
		"unplugin-auto-import": "^0.8.6",
		"vite": "^2.9.5",
		"web-ext": "^6.8.0",
		"webext-bridge": "^5.0.4",
		"webextension-polyfill": "^0.9.0"
	}
}
